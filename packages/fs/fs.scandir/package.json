{
  "name": "@nodelib/fs.scandir",
  "version": "3.0.0",
  "description": "List files and directories inside the specified directory",
  "license": "MIT",
  "repository": "https://github.com/nodelib/nodelib/tree/master/packages/fs/fs.scandir",
  "keywords": [
    "NodeLib",
    "fs",
    "FileSystem",
    "file system",
    "scandir",
    "readdir",
    "dirent"
  ],
  "engines": {
    "node": ">=16.14.0"
  },
  "files": [
    "out/**",
    "!out/benchmark",
    "!out/**/*.map",
    "!out/**/*.spec.*"
  ],
  "main": "out/index.js",
  "typings": "out/index.d.ts",
  "scripts": {
    "clean": "rimraf tsconfig.tsbuildinfo out",
    "lint:code": "eslint \"src/**/*.ts\" --cache",
    "lint:size": "tools-size-limit",
    "compile": "tsc -b .",
    "compile:watch": "tsc -b . --watch --sourceMap",
    "test": "mocha \"out/**/*.spec.js\" -s 0",
    "build": "pnpm run clean && pnpm run compile && pnpm run lint && npm test",
    "watch": "pnpm run clean && pnpm run compile:watch",
    "bench": "pnpm run bench:sync && pnpm run bench:async",
    "bench:sync": "hereby bench:sync",
    "bench:async": "hereby bench:async"
  },
  "dependencies": {
    "@nodelib/fs.stat": "workspace:*",
    "run-parallel": "^1.2.0"
  },
  "devDependencies": {
    "@nodelib/fs.macchiato": "workspace:*",
    "@nodelib/fs.scandir.previous": "npm:@nodelib/fs.scandir@3",
    "@types/mocha": "10.0.9",
    "@types/node": "18.19.63",
    "@types/sinon": "17.0.3",
    "@types/run-parallel": "^1.1.0",
    "bencho": "^0.1.1",
    "eslint": "9.14.0",
    "eslint-config-mrmlnc": "5.0.0",
    "mocha": "10.8.2",
    "rimraf": "6.0.1",
    "sinon": "19.0.2",
    "typescript": "5.6.3",
    "@nodelib-internal/tools.size-limit": "workspace:*",
    "execa": "9.5.1",
    "hereby": "1.10.0"
  }
}
