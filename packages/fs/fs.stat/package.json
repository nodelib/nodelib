{
  "name": "@nodelib/fs.stat",
  "version": "3.0.0",
  "description": "Get the status of a file with some features",
  "license": "MIT",
  "repository": "https://github.com/nodelib/nodelib/tree/master/packages/fs/fs.stat",
  "keywords": [
    "NodeLib",
    "fs",
    "FileSystem",
    "file system",
    "stat"
  ],
  "engines": {
    "node": ">=16.14.0"
  },
  "files": [
    "out/**",
    "!out/**/*.map",
    "!out/**/*.spec.*"
  ],
  "main": "out/index.js",
  "typings": "out/index.d.ts",
  "scripts": {
    "clean": "rimraf tsconfig.tsbuildinfo out",
    "lint:code": "eslint \"src/**/*.ts\" --cache",
    "lint:size": "tools-size-limit",
    "compile": "tsc -b .",
    "compile:watch": "tsc -b . --watch --sourceMap",
    "test": "mocha \"out/**/*.spec.js\" -s 0",
    "build": "pnpm run clean && pnpm run compile && pnpm run lint && npm test",
    "watch": "pnpm run clean && pnpm run compile:watch"
  },
  "devDependencies": {
    "@nodelib/fs.macchiato": "workspace:*",
    "@types/mocha": "10.0.9",
    "@types/node": "18.19.63",
    "@types/sinon": "17.0.3",
    "eslint": "9.14.0",
    "eslint-config-mrmlnc": "5.0.0",
    "mocha": "10.8.2",
    "rimraf": "6.0.1",
    "sinon": "19.0.2",
    "typescript": "5.6.3",
    "@nodelib-internal/tools.size-limit": "workspace:*"
  }
}
